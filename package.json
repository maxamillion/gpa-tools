{
  "name": "gpa-tools",
  "version": "1.0.0",
  "description": "Open Source Project Health Analyzer - Evaluate GitHub repository health metrics",
  "type": "module",
  "engines": {
    "node": ">=20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src tests",
    "format": "prettier --write \"src/**/*.{js,css,html}\" \"tests/**/*.js\"",
    "check": "npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxamillion/gpa-tools.git"
  },
  "keywords": [
    "github",
    "health-metrics",
    "open-source",
    "analysis",
    "metrics"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/maxamillion/gpa-tools/issues"
  },
  "homepage": "https://github.com/maxamillion/gpa-tools#readme",
  "dependencies": {
    "chart.js": "^4.4.7"
  },
  "devDependencies": {
    "@octokit/rest": "^22.0.1",
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "happy-dom": "^20.3.0",
    "msw": "^2.12.7",
    "prettier": "^3.8.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
