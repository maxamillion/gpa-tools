{
  "name": "oss-health-analyzer",
  "version": "1.0.0",
  "description": "Open Source Project Health Analyzer - Evaluate GitHub repositories using industry-standard metrics",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src --ext .js",
    "lint:fix": "eslint src --ext .js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\""
  },
  "dependencies": {
    "@octokit/rest": "^21.0.0",
    "idb": "^8.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.12.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.3.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "github",
    "open-source",
    "health-metrics",
    "chaoss",
    "openssf",
    "community-health"
  ],
  "license": "MIT"
}
